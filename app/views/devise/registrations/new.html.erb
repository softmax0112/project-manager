<div class="card indigo">
  <div class="card-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <h2 class="text-center font-up font-bold py-4 white-text">Sign in</h2>
      <%= bootstrap_devise_error_messages! %>

      <div class="md-form">
        <i class="fa fa-camera-retro prefix"></i>
        <%= f.file_field :image, autofocus: true, autocomplete: 'email', class: 'text-white' %>
      </div>

      <div class='md-form'>
        <i class='fa fa-id-card prefix'></i>
        <%= f.text_field :name, class: 'text-white', placeholder: 'Name' %>
      </div>

      <div class="md-form">
        <i class='fa fa-envelope prefix'></i>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'text-white', placeholder: 'E-mail' %>
      </div>

      <div class="md-form">
        <i class='fa fa-lock prefix'></i>
        <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control', placeholder: 'Password' %>

        <% if @minimum_password_length %>
          <small class="form-text text-muted"><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></small>
        <% end %>
      </div>

      <div class="md-form">
        <i class='fa fa-handshake-o prefix'></i>
        <%= f.password_field :password_confirmation, autocomplete: 'current-password', class: 'text-white', placeholder: 'Confirm Password' %>
      </div>

      <div class="form-group">
        <%= f.submit t('.sign_up'), class: 'btn btn-outline-white waves-effect waves-light' %>
      </div>
    <% end %>

    <%= render 'devise/shared/links' %>
  </div>
</div>
