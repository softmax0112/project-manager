<div class="modal-header">
  <div class='d-flex flex-row-reverse'>
    <h4 class="modal-title font-up font-bold py-4 float-left" id="myModalLabel">Add Attachment</h4>
  </div>
  <div class='row'>
    <div class='col'>
    </div>
    <div class='col'>
      <div class='float-right'>
        <button type="button" class='close' data-dismiss="modal">x</button>
      </div>
    </div>
  </div>
</div>
<div class="modal-body">
  <%= form_with(model: @attachment, local: true, :remote => true) do |form| %>
    <% if @attachment.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@attachment.errors.count, "error") %> prohibited this attachment from being saved:</h2>

        <ul>
        <% @attachment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :filename, class: 'label' %>
      <%= form.file_field :filename, class: 'form-control' %>
    </div>

    <div class="actions modal-footer">
      <%= hidden_field_tag(:project_id, params[:project_id]) %>
      <%= form.submit 'Done', class: 'btn btn-outline-white waves-effect waves-light ajax-attachment', :remote => true %>
    </div>
  <% end %>
</div>
