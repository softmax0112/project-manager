<div class='modal-header'>
  <div class='d-flex flex-row-reverse'>
    <h4 class='modal-title font-up font-bold py-4 float-left' id='myModalLabel'>Add Attachment</h4>
  </div>
  <div class='row'>
    <div class='col'>
    </div>
    <div class='col'>
      <div class='float-right'>
        <button type='button' class='close' data-dismiss='modal'>
          <i class='fa fa-close'></i>
        </button>
      </div>
    </div>
  </div>
</div>
<div class='modal-body'>
  <%= form_with(model: @attachment, remote: true, id: 'attachments-form') do |form| %>
    <%= form.hidden_field :project_id, value: @project.id %>
    <span id='helpBlock' class='help-block'></span>

    <div class='form-group'>
      <%= form.label :filename %>
      <%= form.file_field :filename, class: 'form-control', required: true %>
    </div>

    <div class='actions modal-footer'>
      <%= form.submit 'Done', class: 'btn btn-outline-white waves-effect waves-light', :remote => true %>
    </div>
  <% end %>
</div>
