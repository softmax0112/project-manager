<div class='container'>
  <%= render 'shared/navbar' %>
  <h1><%= current_user.name %></h1>
  <div class='clearfix'></div>

  <% if current_user.image.present? %>
    <%= image_tag current_user.image_url, class: 'img-thumbnail' %>
    <div class='clearfix'></div>
  <% end %>

  <p> E-mail: <%= current_user.email %></p>
  <div class='clearfix'></div>

  <% if current_user.user? %>
    <p> This is a User role! </p>
  <% elsif current_user.admin? %>
    <p> This is an Admin Role! </p>
  <% else %>
    <p> This is a manager role! </p>
  <% end %>

  <%= link_to 'Edit Profile', users_edit_path, class: 'btn btn-primary' %>
</div>
