<div class='container'>
  <%= render 'shared/navbarback' %>
  <%= render 'shared/errors' %>

  <%= form_with model: @user, url: admin_users_path(@user), class: 'form-vertical', local: true do |form| %>

    <div class="form-group">
      <%= form.file_field :image, class: 'file-field filestyle' %>
    </div>

    <p class='form-group'>
      <%= form.label :name, class: 'label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </p>

    <p class='form-group'>
      <%= form.label :email, class: 'label' %>
      <%= form.email_field :email, class: 'form-control' %>
    </p>

    <p class='form-group'>
      <%= form.label :password, class: 'label' %>
      <%= form.password_field :password, class: 'form-control' %>
    </p>

    <div class="form-group">
      <%= form.label :role %>
      <%= form.select :role, options_for_select(['manager','admin', 'user'],
      @user.role), class: 'dropdown form-control' %>
    </div>

    <div class="form-group">
      <%= form.label 'Status' %>
      <%= form.select :enabled, options_for_select([{'Enabled' => true},
        {'Disabled' => false}], @user.enabled), class: 'dropdown form-control' %>
    </div>

    <p class='form-group'>
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </p>

  <% end %>
</div>
