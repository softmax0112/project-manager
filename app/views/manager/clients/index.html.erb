<h1>Manager Clients</h1>

<%= page_entries_info @manager_clients %>
<table class='table table-condensed table-hover table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Affiliation</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @manager_clients.each do |manager_client| %>
      <tr>
        <td><%= manager_client.name %></td>
        <td><%= manager_client.affiliation %></td>
        <td><%= link_to 'Show', manager_client, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_manager_client_path(manager_client),
          class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', manager_client, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @manager_clients, theme: 'twitter-bootstrap-4' %>

<br>

<%= link_to 'New Client', new_manager_client_path, class: 'btn btn-primary' %>
